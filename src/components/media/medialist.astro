---
import MediaPreview from './mediapreview.astro'
import MediaCard from './mediacard.astro'

interface Media {
  type: string;
  title: string;
  score: number;
  date: string;
  comment: string;
  quote: string;
  cover: string;
  link: string;
  recommend: boolean;
  favorite: boolean;
  genre: string;
}

interface Props {
  media: Media[];
  title?: string;
}

const { media, title } = Astro.props;
---

<section class='mb-12 w-full'>
  {title && <h2 class='text-2xl font-bold mb-6 flex justify-center items-center gap-2'>{title}</h2>}
  
  <div class='grid grid-cols-3 sm:grid-cols-4 md:grid-cols-5 lg:grid-cols-6 gap-4 justify-items-center'>
    {media.map((item) => {
      const uniqueId = `${item.type}-${item.title.replace(/\s+/g, '-').toLowerCase()}`;
      return (
        <>
          <MediaPreview media={item} uniqueId={uniqueId} />
          <MediaCard media={item} uniqueId={uniqueId} />
        </>
      );
    })}
  </div>
</section>