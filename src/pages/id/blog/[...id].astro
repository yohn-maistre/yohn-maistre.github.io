---
import { render, type CollectionEntry } from 'astro:content'
import { getBlogCollection, sortMDByDate } from '@yohn-maistre/astro-pure-fork/server'

import PostLayout from '@/layouts/BlogPost.astro'

export const prerender = true

export async function getStaticPaths() {
  const posts = await getBlogCollection('id')
  const sortedPosts = sortMDByDate(posts)
  return sortedPosts.map((post) => ({
    // Strip 'id/' prefix from slug to get clean URL: /id/blog/slug
    params: { id: post.id.replace(/^id\//, '') },
    props: { post, posts: sortedPosts }
  }))
}

type Props = {
  post: CollectionEntry<'blog'>
  posts: CollectionEntry<'blog'>[]
}

const { post, posts } = Astro.props
const { Content, headings, remarkPluginFrontmatter } = await render(post)
---

<PostLayout {post} {posts} {headings} {remarkPluginFrontmatter}>
  <Content />
</PostLayout>
